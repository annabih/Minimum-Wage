di "  Explained by ISCO:        " reduction_isco_post "%"
di "  Explained by NACE:        " reduction_nace_post "%"
di "  Explained by ISCO##NACE:  " reduction_full_post "%"
di "  RESIDUAL (unexplained):   " 100 - reduction_full_post "%"
di ""
